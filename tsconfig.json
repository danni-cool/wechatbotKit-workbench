{
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts","dist/**/*"],
  "compilerOptions": {
    "outDir": "dist/esm",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "lib": [
      "esnext",
    ],
    "target": "ESNext",                                 
    "module": "ESNext",
    "moduleResolution": "node",                                              
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,                     
  }
}
